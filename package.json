{
  "displayName": "Homebridge JVC Projector",
  "name": "homebridge-jvc-projector",
  "type": "module",
  "version": "2.0.0",
  "description": "A Homebridge plugin providing standby control for JVC projectors over IP",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vectronic/homebridge-jvc-projector.git"
  },
  "bugs": {
    "url": "https://github.com/vectronic/homebridge-jvc-projector/issues"
  },
  "scripts": {
    "lint": "eslint . --max-warnings=0",
    "build": "rimraf ./dist && tsc && cp src/*.py dist/",
    "prepublishOnly": "npm run lint && npm run build",
    "watch": "npm run build && npm link && nodemon"
  },
  "keywords": [
    "homebridge-plugin",
    "jvc",
    "projector"
  ],
  "author": "vectronic",
  "license": "MIT",
  "engines": {
    "node": "^20.18.0 || ^22.10.0 || ^24.0.0",
    "homebridge": "^1.8.0 || ^2.0.0-beta.0"
  },
  "dependencies": {
    "async-mutex": "^0.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "homebridge": "^2.0.0-beta.55",
    "nodemon": "^3.1.11",
    "rimraf": "^6.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4"
  }
}
